        <activity
            android:name=".Activity.ConversationMessage"
            android:label="@string/title_activity_conversation_message"
            android:parentActivityName=".Activity.MyMessages"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nour.makssab.Activity.MyMessages" />
        </activity>
        <activity
            android:name=".Activity.MembersDetails"
            android:label="@string/title_activity_members_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>