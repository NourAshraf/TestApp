            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.MyAdvertisement"
            android:label="@string/title_activity_advertisement"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.PhotoZoom"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.Add_Advertisement"
            android:label="@string/title_activity_add__advertisement"
            android:parentActivityName=".Activity.Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.nour.makssab.Activity.Home" />
        </activity>
        <activity
            android:name=".Activity.MyMessages"
            android:label="@string/title_activity_messages"
