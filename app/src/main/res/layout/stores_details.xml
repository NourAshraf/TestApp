<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/ivStoriesDetails"
        android:background="@drawable/ic_user_lion_test"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ملك الغابه"
        android:gravity="center"
        android:id="@+id/tvStoresDetailsName"
        android:textSize="35sp"
        android:textColor="@color/border5"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" ملك ملوك الغابه"
        android:gravity="center"
        android:id="@+id/tvStoresDetailsDes"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:textColor="@color/button_secondary_color"
            android:layout_height="50dp"
            android:text="050123456789"
            android:id="@+id/tvStoresNumber"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="@color/green"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="110dp"
            android:textColor="@color/button_secondary_color"
            android:layout_height="50dp"
            android:text="رقم الجوال:"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:background="@color/green"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_call_answer"
            android:backgroundTint="@color/green" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="العنوان"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/button_secondary_color"
            android:background="@color/LoginButton"
            android:drawableRight="@drawable/ic_map"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:drawableRight="@drawable/ic_microphone"
            android:gravity="center"
            android:text="اخر الاعلانات المضافه"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="20dp"

            android:textStyle="bold" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvStoriesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="طيف الورق لاعمال الديكور"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAdvCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_flag_map_marker"
                    android:gravity="right|center"
                    android:paddingRight="20dp"
                    android:text="الموقع"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAdvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_user_user"
                    android:gravity="right|center"
                    android:paddingRight="20dp"
                    android:text="الاسم"
                    android:textColor="@color/colorAccent"
                    android:textSize="15dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvStoriesLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAdvComments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:drawableLeft="@drawable/ic_speech_bubbles_comment_option"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:paddingLeft="10dp"
                    android:text="5"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvAdvViews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:drawableLeft="@drawable/ic_eye"
                    android:drawablePadding="5dp"
                    android:gravity="center|left"
                    android:paddingRight="50dp"
                    android:text="23"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tvAdvTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/ic_clock_circular_outline"
                    android:gravity="right|center"
                    android:paddingRight="10dp"
                    android:text="منذ 25 دقيقه"
                    android:textColor="@android:color/background_dark"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivStoriesImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/no_image" />
    </RelativeLayout>

</LinearLayout>