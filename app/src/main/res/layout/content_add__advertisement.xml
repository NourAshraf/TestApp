<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
     android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/button_bg1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.makssab.Activity.Add_Advertisement"
    tools:showIn="@layout/activity_add__advertisement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/LoginTitle"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_user_login_title"
            android:gravity="center"
            android:text="اضف اعلان جديد"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="القسم الرئيسي"
        android:textStyle="bold" />
    <Spinner
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_custom_test"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spMainSection"
        android:elevation="5dp"
        >
    </Spinner>

    <TextView
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="القسم الفرعي"
        android:textStyle="bold" />
    <Spinner
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_custom_test"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spSubSection"
        android:elevation="5dp"
        >
    </Spinner>
    <LinearLayout
        android:id="@+id/llCar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ماركة السياره"
            android:textStyle="bold" />
        <Spinner
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_custom_test"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SearchSpinnerMarka"
            android:elevation="5dp"
            >
        </Spinner>

        <TextView
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نوع السياره"
            android:textStyle="bold" />
        <Spinner
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_custom_test"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SearchSpinnerKind"
            android:elevation="5dp"
            >
        </Spinner>
        <TextView
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="مودل السياره"
            android:textStyle="bold" />
        <EditText
            android:hint="مودل السياره:2016,2015"
            android:id="@+id/etCarModel"
            android:gravity="right"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اختار المنطقة"
        android:textStyle="bold" />
    <Spinner
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_custom_test"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewAccountSpinnerArea"
        android:elevation="5dp"
        >
    </Spinner>
    <TextView
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="اختار المدينة"
        android:textStyle="bold" />
    <Spinner
        android:layout_marginTop="5dp"
        android:background="@drawable/spinner_custom_test"
        android:paddingLeft="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NewAccountSpinnerCity"
        />

    <EditText
        android:id="@+id/etPhone"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:hint="رقم الجوال"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTitle"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:hint="عنوان الاعلان"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etDescraption"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:hint="محتوي الاعلان"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="صوره رئيسة للاعلان"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_icon" />
    <TextView
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="صور فرعية للاعلان"
        android:textStyle="bold" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSubImages"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/bAddAdv"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:text="اضافة"
        android:textColor="@android:color/background_light"
        android:background="#0277bd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>