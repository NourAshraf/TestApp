<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_bg"
    android:orientation="vertical"
  >

    <ImageView
        android:id="@+id/ivMembersFavoritesImage"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvMembersFavoritesTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/button_primary_color"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tvMembersFavoritesPlace"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvMembersFavoritesPlaceImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_user_flag" />

        <TextView
            android:id="@+id/tvMembersFavoritesName"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvMembersFavoritesNameImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_user_user" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMembersFavoritesCommentImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_user_comment" />

        <TextView
            android:id="@+id/tvMembersFavoritesCommentNumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvMembersFavoritesSeenImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_user_eye" />

        <TextView
            android:id="@+id/tvMembersFavoritesSeenNumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvMembersFavoritesDakeka"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="70dp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMembersFavoritesTimeNumber"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:textColor="@android:color/background_dark" />

        <TextView
            android:id="@+id/tvMembersFavoritesMonzoo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:textColor="@android:color/background_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMembersFavoritesTimeImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_user_time" />


    </LinearLayout>

</LinearLayout>
