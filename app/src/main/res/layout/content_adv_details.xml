<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.makssab.Activity.AdvDetails"
    tools:showIn="@layout/activity_adv_details"
    android:orientation="vertical">

    <TextView
        android:background="@color/gray"
        android:padding="10dp"
        android:id="@+id/tvAdvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:background="@android:color/background_light"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAdvCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_flag_map_marker"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:text="الموقع"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAdvOwner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_user_user"
                android:gravity="right|center"
                android:paddingRight="20dp"
                android:text="الاسم"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/border"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_speech_bubbles_comment_option"
                android:drawablePadding="5dp"
                android:id="@+id/tvAdvComments"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="5"
                android:textColor="@android:color/background_dark"
                android:layout_weight="2"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvAdvViews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_eye"
                android:gravity="center|left"
                android:paddingRight="50dp"
                android:text="23"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"
                />

            <TextView
                android:drawableRight="@drawable/ic_clock_circular_outline"
                android:drawablePadding="5dp"
                android:id="@+id/tvAdvTime"
                android:paddingRight="10dp"
                android:textColor="@android:color/background_dark"
                android:gravity="right|center"
                android:text="منذ 25 دقيقه"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/border"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="25dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:text="Descrption"
            android:textSize="16dp"
            android:textStyle="bold" />

        <com.daimajia.slider.library.SliderLayout
            android:layout_margin="10dp"
            android:background="@drawable/button_bg"
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:drawableTop="@drawable/ic_share"
                android:background="?attr/selectableItemBackground"
                android:textSize="10dp"
                android:text="نشر الاعلانات"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/ic_white_flag_symbol"
                android:background="?attr/selectableItemBackground"
                android:textSize="10dp"
                android:text="الابلاغ"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/ic_heart"
                android:background="?attr/selectableItemBackground"
                android:textSize="10dp"
                android:text="المفضلة"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/ic_speech_bubble"
                android:background="?attr/selectableItemBackground"
                android:textSize="10dp"
                android:text="تعليق"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableTop="@drawable/ic_message_closed_envelope"
                android:background="?attr/selectableItemBackground"
                android:textSize="10dp"
                android:text="مراسلة"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:background="@color/gray"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:padding="5dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_comments"
                android:textSize="12dp"
                android:background="@drawable/button_bg6"
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="متابعة الردود" />

            <Button
                android:padding="5dp"
                android:drawablePadding="2dp"
                android:drawableLeft="@drawable/ic_call_answer"
                android:textSize="12dp"
                android:background="@drawable/button_bg7"
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="وسيلة الاتصال"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/button3"
                android:layout_toStartOf="@+id/button3"
                android:text="0544403004"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>