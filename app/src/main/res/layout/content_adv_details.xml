<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:fillViewport="true"
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.makssab.Activity.AdvDetails"
    tools:showIn="@layout/activity_adv_details"
    android:orientation="vertical">

    <TextView
        android:background="@color/gray"
        android:padding="10dp"
        android:id="@+id/tvAdvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hello"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAdvCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_flag_map_marker"
            android:gravity="right|center"
            android:paddingRight="50dp"
            android:text="الموقع"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAdvOwner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_user_user"
            android:gravity="right|center"
            android:paddingRight="50dp"
            android:text="الاسم"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />
    </LinearLayout>
    
    <TextView
        android:textSize="16dp"
        android:padding="10dp"
        android:text="Descrption"
        android:id="@+id/tvDescription"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/border"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/ic_speech_bubbles_comment_option"
            android:drawablePadding="5dp"
            android:id="@+id/tvAdvComments"
            android:paddingLeft="10dp"
            android:gravity="left|center"
            android:text="5"
            android:textColor="@android:color/background_dark"
            android:layout_weight="2"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tvAdvViews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_eye"
            android:gravity="center|left"
            android:paddingRight="50dp"
            android:text="23"
            android:textSize="15dp"
            android:textColor="@android:color/background_dark"
            />

        <TextView
            android:drawableRight="@drawable/ic_clock_circular_outline"
            android:drawablePadding="5dp"
            android:id="@+id/tvAdvTime"
            android:paddingRight="10dp"
            android:textColor="@android:color/background_dark"
            android:gravity="right|center"
            android:text="منذ 25 دقيقه"
            android:layout_weight="1.5"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <com.daimajia.slider.library.SliderLayout
        android:layout_margin="10dp"
        android:background="@drawable/button_bg"
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
</LinearLayout>
</ScrollView>