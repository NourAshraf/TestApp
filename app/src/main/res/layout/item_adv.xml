<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/button_bg2"
    >
    <LinearLayout
        android:padding="10dp"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">
            <ImageView
                android:id="@+id/ivAdvImage"
                android:layout_width="match_parent"
                android:layout_height="190dp" />

            <TextView
                android:id="@+id/tvImageNum"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/TransperantGray2"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />
        </RelativeLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvAdvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAdvCity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_flag_map_marker"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="الموقع"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAdvOwner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_user_user"
                android:gravity="right|center"
                android:paddingRight="50dp"
                android:text="الاسم"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@color/border"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@drawable/ic_speech_bubbles_comment_option"
                android:drawablePadding="5dp"
                android:id="@+id/tvAdvComments"
                android:paddingLeft="10dp"
                android:gravity="left|center"
                android:text="5"
                android:textColor="@android:color/background_dark"
                android:layout_weight="2"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvAdvViews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_eye"
                android:gravity="center|left"
                android:paddingRight="50dp"
                android:text="23"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"
                />

            <TextView
                android:drawableRight="@drawable/ic_clock_circular_outline"
                android:drawablePadding="5dp"
                android:id="@+id/tvAdvTime"
                android:paddingRight="10dp"
                android:textColor="@android:color/background_dark"
                android:gravity="right|center"
                android:text="منذ 25 دقيقه"
                android:layout_weight="1.5"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>