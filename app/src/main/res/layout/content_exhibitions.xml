<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.makssab.Activity.Exhibitions"
    tools:showIn="@layout/activity_exhibitions"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/LoginTitle"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="18dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=" معارض سيارات فى السعوديه"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_bg"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:background="@drawable/button"
            android:textSize="24sp"
            android:textStyle="bold"
            android:id="@+id/bSearch"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/llStateExhibitions"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر المنطقه"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsMkan"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/llCityExhibitions"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر المدينه"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCity"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/llCarMarkaExhibitions"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر ماركه السياره"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCarMarka"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/llCarKindExhibitions"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر نوع السياره"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCarKind"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:background="@color/LoginButton"
        android:text="بحث"
        android:visibility="gone"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:id="@+id/bSearchExhibitions"/>
        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="180dp"
            android:text="اخفاء البحث"
            android:id="@+id/tvHiddenExhibitions"/>


    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvExhibitionsList"
        android:layout_marginTop="10dp"
        android:dividerHeight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null">

    </ListView>
</LinearLayout>
