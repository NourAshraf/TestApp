<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nour.makssab.Activity.Exhibitions"
    tools:showIn="@layout/activity_exhibitions"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/LoginTitle"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="18dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text=" معارض سيارات فى السعوديه"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر المنطقه"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsMkan"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر المدينه"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCity"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر ماركه السياره"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCarMarka"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="320dp"
            android:layout_height="30dp"
            android:text="اختر نوع السياره"
            android:textSize="14sp"
            android:textColor="@color/words"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_user_arrow_down"
            android:id="@+id/tvExhibitionsCarKind"
            />


    </LinearLayout>
    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="@color/LoginButton"
        android:text="بحث"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:id="@+id/bSearchSearch"/>
    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollview"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg3">


        <Button
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="1"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="2"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="3"
            android:gravity="center"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:text="4"
            android:gravity="center"
            android:layout_gravity="center"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="5"
                android:gravity="center"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="6"
                android:gravity="center"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="7"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </HorizontalScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvExhibitionsList"
        android:layout_marginTop="10dp"
        android:dividerHeight="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:divider="@null">

    </ListView>
</LinearLayout>
